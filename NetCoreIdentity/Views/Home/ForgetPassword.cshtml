@{
    ViewData["Title"] = "ResetPassword";
}

@model ForgetPasswordViewModel
@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}


<div class="row">
    <div class="col-md-6 offset-md-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }

        <div class="alert alert-info">The reset link will be sent to your e-mail address.</div>
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>
        <form asp-controller="Home" asp-action="ForgetPassword" method="post">
            <div class="mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <input value="test@test.com" asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    </div>
</div>

