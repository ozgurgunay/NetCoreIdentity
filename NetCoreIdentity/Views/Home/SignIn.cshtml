@{
    ViewData["Title"] = "SignIn";
}

@model SignInViewModel
@section Scripts
    {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>User Sign In</h2>
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert"></div>
        <form asp-controller="Home" asp-action="SignIn" asp-route-returnurl="@Context.Request.Query["returnURL"]" method="post">
            <div class="mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <input value="test@test.com" asp-for="Email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label" asp-for="Password"></label>
                <input value="Teest123*" type="password" asp-for="Password" class="form-control">
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3 form-check">
                        <input type"checkbox" class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe" for="RememberMe"></label>
                    </div>
                </div>
                <div class="col-md-6 text-md-end">
                    <a class="btn btn-link" asp-controller="Home" asp-action="ForgetPassword">Forgot Password</a>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Sign In</button>
            
        </form>
    </div>
</div>
